conda install -c bioconda star

/home/melissarp_mr/hisat/Musa_acuminata_pahang_v4.fasta #genome
/home/melissarp_mr/hisat/Musa_acuminata_pahang_v4.gtf 
/home/melissarp_mr/index #para guardar el indice
/home/melissarp_mr/Trans/fastp/out-fastp #reads

STAR --runThreadN 64 --runMode genomeGenerate --genomeDir index --genomeFastaFiles /home/melissarp_mr/hisat/Musa_acuminata_pahang_v4.fasta --sjdbGTFfile /home/melissarp_mr/hisat/Musa_acuminata_pahang_v4.gtf 
mkdir starAligned 

STAR --runThreadN 32 --genomeDir /home/melissarp_mr/index --outFileNamePrefix starAlign2/ --readFilesIn out-filt-Tuu_Gia_Ctrl_6_12_hpi_S7_R1_001.fastq,out-filt-Tuu_Gia_M_fijiensis_12_hpi_R1_R2_S9_R1_001.fastq,out-filt-Tuu_Gia_M_fijiensis_24_hpi_R1_R2_S10_R1_001.fastq,out-filt-Tuu_Gia_M_fijiensis_3_dpi_R1_R2_S11_R1_001.fastq,out-filt-Tuu_Gia_M_fijiensis_6_hpi_R1_R2_S8_R1_001.fastq,out-filt-Tuu_Gia_M_fijiensis_7_dpi_R1_R2_S12_R1_001.fastq,out-filt-Williams_Ctrl_6_12_hpi_S1_R1_001.fastq,out-filt-Williams_M_fijiensis_12_hpi_R1_R2_S3_R1_001.fastq,out-filt-Williams_M_fijiensis_24_hpi_R1_R2_S4_R1_001.fastq,out-filt-Williams_M_fijiensis_3_dpi_R1_R2_S5_R1_001.fastq,out-filt-Williams_M_fijiensis_6_hpi_R1_R2_S2_R1_001.fastq,out-filt-Williams_M_fijiensis_7_dpi_R1_R2_S6_R1_001.fastq

conda install -c bioconda samtools
samtools view -bS Aligned.out.sam > Aligned.out.bam
