for x in *.fastq; do fastp -i $x -o "out-$x" -h "out-h-$x.html" -j "out-j-$x.json"; mkdir "fastp-$x";
mv "out-$x"* /Volumes/MelissaCRP/Transcriptomics-RNA-seq/filtered/"fastp-$x"; 
mv "fastp-$x" /Volumes/MelissaCRP/Transcriptomics-RNA-seq/fastpfilter; done
